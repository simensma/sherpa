au BufNewFile,BufRead *.html set filetype=htmldjango

autocmd FileType python :setlocal sw=4 ts=4 sts=4 tw=100       " Four spaces for python "
autocmd FileType htmldjango :setlocal tw=100                   " Django templates config "
autocmd FileType javascript :setlocal sw=4 ts=4 sts=4 tw=100   " Four spaces for javascript "

let g:ctrlp_custom_ignore = {
  \ 'dir':  '\v[\/](\.git|env|static/lib)$',
  \ 'file': '\v\.(css|pyc)$',
  \ }
